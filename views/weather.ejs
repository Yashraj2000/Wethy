  <!DOCTYPE html>
  <html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <link rel="stylesheet" href="style.css">
      <title>Current Weather status</title>
  </head>
  <body> 
    <nav>
        <div class="nav-wrapper blue ">
            <div class="container">
                <a href="#" class="brand-logo"><i class="material-icons">flash_on</i> <span id="logo">Wethy Track</span></a>
            </div>
        </div>
      </nav>
     <% if(err.length >0){ %>
      <div id="modal1" class="modal center-align">
          <h3>Alert! <br> Please Provide a valid Place</h3>
          <a href="#!" class="modal-close waves-effect waves-green btn">Close</a>
      </div>
     <%  } %>
       <div class="container">
           <form action="/weather" method="GET">
           <input type="text" name="weather" id="we" placeholder="Enter the Place to Search">
           <button class="btn blue-grey darken-4">Search</button>
           </form> 
       </div>
        <div class="container">
                    <div class="row">
                        <div class="col s12 m3">
                          <div class="card">
                              <div class="cloud container">
                                <% if(typeof weatherdata != 'undefined'){ %> 
                              <img src=" <%= weatherdata.current.condition.icon %> " class="responsive-img weather">
                              <%  } else {%>
                                <img src="cloud.png" class="responsive-img weather">
                                <%}%>
                                <div class="detail">
                                    <% if(typeof weatherdata != 'undefined'){ %>
                                    <h5><%= weatherdata.current.condition.text %></h5>
                                        <%  } else {%> 
                                            <h5>A lovely Day </h5>
                                            <%}%>
                                </div>
                                <% if(typeof weatherdata != 'undefined'){ %>
                                <div class="cel"><%= weatherdata.current.temp_c%></div>
                                <%  } else {%> 
                                    <div class="cel">0</div>                                    
                                    <%}%>
                                <p class="detail">Celsius</p>
                                <div>
                                    <% if(typeof weatherdata != 'undefined'){ %>
                                    <p style="float: left; color: green;"><%= weatherdata.location.name %></p>
                                    <p style="float: right;color:red;"><%= new Date().toDateString() %></p>
                                    <%  } else {%> 
                                        <p style="float: left;">Place</p>
                                        <p style="float: right;">country</p>
                                        <%}%>
                                </div>
                            </div>
                          </div>
                        </div>
                    
                        <div class="cont">
                            <!-- <div class="col s12 m1"></div> -->
                            <div class="col s12 m2">
                                <div class="card data">
                                    <div class="cloud container">
                                    <img src="min.png" class="responsive-img icon">
                                      <div class="detail"><h6>Min</h6></div>
                                      <% if(typeof weatherdata != 'undefined'){ %>
                                      <div class="cel2"><%=weatherdata.forecast.forecastday[0].day.mintemp_c%></div>
                                      <%  } else {%> 
                                          <div class="cel2">0</div>                                    
                                          <%}%>
                                  </div>
                                </div>
                              </div>
                            <div class="col s12 m2">
                                <div class="card data">
                                    <div class="cloud container">
                                    <img src="max.png" class="responsive-img icon">
                                      <div class="detail"><h6>Max</h6></div>
                                      <% if(typeof weatherdata != 'undefined'){ %>
                                      <div class="cel2"><%= weatherdata.forecast.forecastday[0].day.maxtemp_c%></div>
                                      <%  } else {%> 
                                          <div class="cel2">0</div>                                    
                                          <%}%>
                                  </div>
                                </div>
                              </div>
                            <div class="col s12 m2">
                                <div class="card data">
                                    <div class="cloud container">
                                    <img src="humidity.png" class="responsive-img icon">
                                      <div class="detail"><h6>Humidity</h6></div>
                                      <% if(typeof weatherdata != 'undefined'){ %>
                                      <div class="cel2"><%= weatherdata.current.humidity%>%</div>
                                      <%  } else {%> 
                                          <div class="cel2">0</div>                                    
                                          <%}%>
                                  </div>
                                </div>
                              </div>
                            <div class="col s12 m2">
                                <div class="card data">
                                    <div class="cloud container">
                                    <img src="windspeed.png" class="responsive-img icon">
                                      <div class="detail"><h6>Wind speed</h6></div>
                                      <% if(typeof weatherdata != 'undefined'){ %>
                                      <div class="cel2"><%=  weatherdata.current.wind_kph%>kph</div>
                                      <%  } else {%> 
                                          <div class="cel2">0</div>                                    
                                          <%}%>
                                  </div>
                                </div>
                              </div>
                            <div class="col s12 m2">
                                <div class="card data">
                                    <div class="cloud container">
                                    <img src="pressure.png" class="responsive-img icon">
                                      <div class="detail"><h6>Pressure</h6></div>
                                      <% if(typeof weatherdata != 'undefined'){ %>
                                      <div class="cel2"><%=  weatherdata.current.pressure_mb%>mb</div>
                                      <%  } else {%> 
                                          <div class="cel2">0</div>                                    
                                          <%}%>
                                  </div>
                                </div>
                              </div>
                            <div class="col s12 m2">
                                <div class="card data">
                                    <div class="cloud container">
                                    <img src="sunrise.png" class="responsive-img icon">
                                      <div class="detail"><h6>Sunrise</h6></div>
                                      <% if(typeof weatherdata != 'undefined'){ %>
                                      <div class="cel2"><%=weatherdata.forecast.forecastday[0].astro.sunrise%></div>
                                      <%  } else {%> 
                                          <div class="cel2">0</div>                                    
                                          <%}%>
                                  </div>
                                </div>
                              </div>
                            <div class="col s12 m2">
                                <div class="card data">
                                    <div class="cloud container">
                                    <img src="sunset.png" class="responsive-img icon">
                                      <div class="detail"><h6>Sunset</h6></div>
                                      <% if(typeof weatherdata != 'undefined'){ %>
                                      <div class="cel2"><%= weatherdata.forecast.forecastday[0].astro.sunset%></div>
                                      <%  } else {%> 
                                          <div class="cel2">0</div>                                    
                                          <%}%>
                                  </div>
                                </div>
                              </div>
                            <div class="col s12 m2">
                                <div class="card data">
                                    <div class="cloud container">
                                    <img src="average.jpg" class="responsive-img icon">
                                      <div class="detail"><h6>Average</h6></div>
                                      <% if(typeof weatherdata != 'undefined'){ %>
                                      <div class="cel2"><%=weatherdata.forecast.forecastday[0].day.avgtemp_c%></div>
                                      <%  } else {%> 
                                          <div class="cel2">0</div>                                    
                                          <%}%>
                                  </div>
                                </div>
                              </div>
                    </div>
            </div>
            <div class="container center-align" id="text" style="margin-bottom: 30px;">
                <h4>Get the Real Time weather Updates of any location with 
               <br> <i class="material-icons">flash_on</i><span id="fot" style="color:#2196F3;">Wethy Track</span></h4>
            </div>
        </div> 
        <div class="footer">
            <p>© Made with ❤️ By Yash Raj Banka</p>
          </div>          
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="custom.js"></script>
  </body>
  </html>